{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "lib/",
    "rootDir": "src/",
    "target": "ES2019",
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": true,
    "stripInternal": true
  },
  "include": [
    "src/**/*.ts"
  ]
}